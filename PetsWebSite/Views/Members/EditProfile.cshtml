@model PetsWebSite.Models.ViewModels.EditProfileVm

<link href="/css/Profile.css?v=1.0" rel="stylesheet" />
<main>
    <div class="container1 mt-5">
        <h2 class="mb-4">使用者資訊</h2>

        <!-- 顯示成功或失敗的訊息 -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <!-- Edit Button -->
        <div class="text-end mb-3">
            <button type="button"
                    class="editbutton btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#editModal">
                編輯
            </button>
        </div>

        <!-- Display User Information -->
        <div id="userInfo" class="mt-3">
            <p>姓名: @Model.Name</p>
            <p>電話號碼: @Model.Mobile</p>
            <p>地址: @Model.Address</p>
        </div>
    </div>
</main>

<!-- Modal for editing user information -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">編輯使用者資訊</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditProfile", "Members", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <!-- 姓名 -->
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, "姓名", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @id = "fullName" })
                    </div>

                    <!-- 電話號碼 -->
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Mobile, "電話號碼", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @type = "tel", @id = "phoneNumber" })
                    </div>

                    <!-- 地址 -->
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Address, "地址", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @id = "address" })
                    </div>

                    <!-- 表單提交按鈕 -->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">保存</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
