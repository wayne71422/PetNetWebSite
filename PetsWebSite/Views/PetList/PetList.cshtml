@model IEnumerable<PetsWebSite.Models.ViewModels.PetListVm>

@{
    ViewBag.Title = "PetList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <link href="~/css/petList.css" rel="stylesheet" />

    <style>
        .btn-secondary {
            background-color: transparent;
            border: none;
            color: #333;
        }

            .btn-secondary:hover {
                background-color: transparent;
            }
    </style>
}

<div class="container">

    <div>
        <a href="@Url.Action("CreatePet", "PetList")" class="btn btn-primary">新增</a>

        <div class="pet-list">

            @foreach (var pet in Model)
            {
                <div class="container-md">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <img src="@Url.Content("~/Uploads/Pets/" + pet.Photo)" class="img-fluid" />
                        </div>
                        <div class="col-md-7">
                            <table class="text-center">
                                <tbody>
                                    <tr>
                                        <th scope="row">寵物名</th>
                                        <td>@Html.DisplayFor(p => pet.Name)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">生日</th>
                                        <td>@Html.DisplayFor(p => pet.Birthday)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">種類</th>
                                        <td>@Html.DisplayFor(p => pet.Species)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">品種</th>
                                        <td>@Html.DisplayFor(p => pet.Breed)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">性別</th>
                                        <td>@Html.DisplayFor(p => pet.Gender)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">結紮</th>
                                        <td>@Html.DisplayFor(p => pet.Neutered)</td>
                                    </tr>
                                    <tr>
                                        <th scope="row">體重(公斤)</th>
                                        <td>@Html.DisplayFor(p => pet.Weight)</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="btns">
                                <a href="@Url.Action("EditPet", "PetList", new {petId = pet.Id})" class="btn btn-primary">編輯</a>
                                <a href="@Url.Action("Diary", "PetList", new {petId = pet.Id})" class="btn btn-primary">活動日記</a>
                                <a href="@Url.Action("Book", "BookDate",new {petId = pet.Id})" class="btn btn-primary book">預約諮詢</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


@section scripts{
    <script src="~/Scripts/petList.js"></script>
    <script>
        $(document).ready(function() {
            // 當點擊預約諮詢時
            $('.book').on('click', function(event) {
                event.preventDefault(); // 防止默認的跳轉行為

                var petId = $(this).attr('href').split('=').pop(); // 獲取 petId

                // AJAX 請求以獲取 AccountBalance
                $.ajax({
                    url: '@Url.Action("GetAccountBalance", "BookDate")', // 替換成你的控制器和方法
                    method: 'GET',
                    success: function(data) {
                        if (data.accountBalance < 200) {
                            Swal.fire({
                                icon: "error",
                                title: "預約失敗",
                                text: "餘額不足，請前往儲值", 
                            }).then(() => {
                                window.location.href = '@Url.Action("DepositPoints", "Deposit")';
                            });
                        } else {
                            // 如果餘額足夠，進行跳轉
                            window.location.href = '@Url.Action("Book", "BookDate", new { petId = "__PET_ID__" })'.replace('__PET_ID__', petId);
                        }
                    },
                    error: function() {
                        alert("無法獲取帳戶餘額，請稍後再試。");
                    }
                });
            });
        });
    </script>
}
